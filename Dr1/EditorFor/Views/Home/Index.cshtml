@using Microsoft.AspNetCore.Mvc.Rendering
@using EditorFor;
@model EditorFor.Models.TestModel



@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="col">
            <h2>Default EditorFor:</h2>
            @Html.EditorForModel()
        </div>
        <div class="col">
            <h2>Custom EditorForModel:</h2>
            @Html.MyEditorForModel(Model)
        </div>
        <div class="col">
            <h2>Custom EditorFor:</h2>
            @Html.MyEditorForProperty(Model.EnumProperty)
        </div>
    </div>
</div>